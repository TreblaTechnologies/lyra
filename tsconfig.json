{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "common/*": ["src/common/*"],
      "web/*": ["src/web/*"],
      "react-native/*": ["src/react-native/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "__tests__/web/**/*.ts",
    "__tests__/web/**/*.tsx",
    "__tests__/react-native/**/*.ts",
    "__tests__/react-native/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
